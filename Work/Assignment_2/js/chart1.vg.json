{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 330,
  "background": "#EEEADD",
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    },
    "axis": {
      "grid": true,
      "gridColor": "#c4a6a6"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/VladislavPikulin/FIT3179/main/Work/Assignment_2/data/modified/tourism_europe_total_per_country_aggr.csv"
  },

  "layer":[{

    "mark": "area",
    "encoding": {
      "x": {"timeUnit": "yearmonth", "field": "Year", "axis": {"format": "%Y"}},
      "y": {"aggregate": "sum", "field": "Tourists"},
      "color": {"field": "Country", "scale": {"scheme": "category20"}},
      "tooltip": [
        {"field": "Country", "type": "nominal"},
        {"field": "Year", "type": "temporal"},
        {"field": "Tourists", "type": "quantitative", "format": ","}
      ]
    }

  }]
}

