{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 400,
  "background": "#EEEADD",
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    },
    "axis": {
      "grid": true,
      "gridColor": "#c4a6a6"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/VladislavPikulin/FIT3179/main/Work/Assignment_2/data/modified/tourism_europe_total_per_country_aggr.csv"
  },
  "encoding": {
      "x": {"timeUnit": "yearmonth", 
            "field": "Year", 
            "axis": {"format": "%Y"}
            },
      "y": {"aggregate": "sum", "field": "Tourists"},
      "color": {
        "field": "Country", 
        "scheme": "tableau10"
      },
      "tooltip": [
        {"field": "Country", "type": "nominal"},
        {"field": "Year", "type": "temporal"},
        {"field": "Tourists", "type": "quantitative", "format": ","}
      ]
    },

  
  "layer":[{
    
    "params": [{
          "name": "brush",
          "select": {"type": "interval", "encodings": ["x","y"]}
        }],

    "mark": {"type":"area","point": true}

  },{
    "transform": [
      {"filter": {"param": "brush"}}
    ],
    "mark": {"type": "area", "color": "goldenrod"}
  },


  {
    "mark": {
        "type": "text",
        "align": "right",
        "dx": 500,
        "dy": -350,
        "baseline": "middle",
        "fontSize": 10,
        "fontStyle": "italic"
    },
    "encoding": {
        "text": {"field": "Annotation", "type": "nominal"},
        "color":{"value":"black"}
        
    }
  }
    ]
}

