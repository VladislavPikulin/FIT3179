{
  "width": 700,
  "height": 370,
  "background": "#EEEADD",
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    },
    "axis": {
      "grid": true,
      "gridColor": "#c4a6a6"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/VladislavPikulin/FIT3179/main/Work/Assignment_2/data/modified/tourism_europe_total.csv"
