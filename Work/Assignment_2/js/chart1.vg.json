      "tooltip": [
        {"field": "Year", "type": "temporal", "title": "Year"},
        {
          "field": "Tourists",
          "type": "quantitative",
          "title": "Total Number of Tourists"
        }
      ]
    }
  },
  {
    "mark": {
      "type": "text",
      "dy": 10,
      "fontSize": 11.5
    },
    "encoding": {
      "text": {"field": "Country Name", "type": "nominal"},
      "color": {"value": "white"},
      "opacity": {
        "condition": {
          "test": "datum['Country Name'] == 'France' || datum['Country Name'] == 'Ukraine'",
          "value": 1
        },
        "value": 0
