{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Tourist Arrivals in 2018",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/VladislavPikulin/FIT3179/main/Work/Week9HW/js/week9homework.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "params": [
    {
      "name": "Select_Year",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 10000000,
        "step": 1000000,
        "name": "Minimum Tourist Arrivals: "
      }
    }
  ],
  "transform": [
    {  

      "lookup": "properties.SU_A3",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/VladislavPikulin/FIT3179/main/Work/Week9HW/data/tourism.csv"
        },
        "key": "Country Code",
        "fields": ["2018"]
      }
    },
    {"calculate": "datum['2018']/100000", "as": "Tourist Arrivals"},
    {"filter": "datum['2018'] > Select_Year"},
    {"filter": "datum['Country Name'] != 'Algeria'"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Tourist Arrivals",
      "type": "quantitative",
      "scale": {"type": "log", "scheme": "lighttealblue"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {
        "field": "2018",
        "type": "quantitative",
        "title": "Number of Tourist Arrivals"
      }
    ]
  }
}